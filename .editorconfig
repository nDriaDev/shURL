root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 120
tab_width = 4

[*.env.*]
insert_final_newline = false
trim_trailing_whitespace = false

[*.css]
indent_style = tab

[{*.ats,*.cts,*.mts,*.ts,*.tsx}]
indent_style = tab

[{*.cjs,*.js,*.jsx}]
indent_style = tab

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_style = tab

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
indent_style = tab
